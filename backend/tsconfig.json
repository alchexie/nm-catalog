{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "rootDir": "src",
    "outDir": "dist",

    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,

    "strict": true,
    "skipLibCheck": true,

    // 迁移期临时参数
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noImplicitThis": false,
    "useUnknownInCatchVariables": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "files"]
}
